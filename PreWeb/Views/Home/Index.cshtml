@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="index.css" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script src="http://api-maps.yandex.ru/2.0-stable/?load=package.standard&lang=ru-RU" type="text/javascript"> </script>
    <script src="mapinit.js" type="text/javascript"></script>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no, maximum-scale=1" />
</head>
<body>
    <form name="search_input">
        <table width="100%" height="100%" cellspacing="0">
            <tr height="5%" id="toptr" valign="middle">
                <td width="20%" align="LEFT" valign="middle" id="tld"><p align="middle" id="str">Список магазинов</p></td>
                <td>
                    <input id="searchfield" autocomplete="off" class="layer1" type="TEXT" name="SRCH" maxlength="40" size="100" align="right">
                    <input type="BUTTON" id="searchbutton" value=" Поиск " onclick="search_map()" align="right" height="30" width="50">
                    <div id="search_advice_wrapper"></div>
                </td>
            </tr>
            @foreach (var b in ViewBag.Shops)
            {
                <tr>
                    <td width="20%" align="LEFT" valign="top" class="lc">
                        <p align="Left" id="str">
                            @b.Name <br>
                    </p>
                </td>
                </tr>
            }

        </table>
    </form>
</body>

</html>